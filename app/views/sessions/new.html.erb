<h1>Sign in</h1>
<%= form_tag sessions_path, class: "sign_in" do %>
	<div>
		<%= label_tag :email, "Email Address" %>
	</div>
	<div>
		<%= email_field_tag(:email, '') %>
	</div>
	<div>
		<%= label_tag :password, "Password" %>
	</div>
	<div>
		<%= password_field_tag(:password, '') %>
	</div>
	<div>
		<input type="submit" value="Log in">
	</div>
<% end %>